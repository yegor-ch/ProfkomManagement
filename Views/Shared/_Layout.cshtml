<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
<header>    
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a href="#" class="navbar-brand">
                <img src="~/images/logo.png" width="32" height="32" alt="Alternate Text" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="home" asp-action="index" class="nav-link active">Головна</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="faculties" asp-action="list" class="nav-link">Факультети</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Статистика</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="members" asp-action="create" class="nav-link">Додати члена</a>
                    </li>
                </ul>
                <form asp-controller="home" asp-action="index" method="post" class="form-inline">
                    <input class="form-control mr-sm-2 nav-search-btn" name="search" placeholder="Знайти" type="text" />
                    <button class="btn btn-info" type="submit">Знайти</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <label class="navbar-text">user@gmail.com</label>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
<div class="container">
        @RenderBody()
</div>
<footer>

</footer>
</body>
</html>
